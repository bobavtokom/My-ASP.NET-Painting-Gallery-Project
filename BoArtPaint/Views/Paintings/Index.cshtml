@section scripts{
    <script>
        $(document).ready(function () {
            $("#paintings .js-delete").on("click", function () {
                var button = $(this);
                bootbox.confirm("Are you sure to delete this item?", function (result) {
                    if (result) {
                        $.ajax({
                            url: "/api/paintings/" + button.attr("data-painting-id"),
                            method: "DELETE",
                            success: function () {
                                button.parents("div:first").remove();

                            }
                        });
                    }
                });
            });
        });
    </script>
